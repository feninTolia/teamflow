generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Channel {
  id   String @id @default(uuid())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Foreign keys(kinde ids)
  workspaceId String
  createdById String

  messages Message[]

  @@unique([name, workspaceId])
}

model Message {
  id String @id @default(uuid())

  content  String
  imageUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId     String
  authorEmail  String
  authorName   String
  authorAvatar String

  channel   Channel? @relation(fields: [channelId], references: [id])
  channelId String?
}
